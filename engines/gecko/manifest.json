{
  "browser_specific_settings": {
    "gecko": {
      "id": "abf@mosley.xyz",
      "strict_min_version": "113.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; connect-src https://raw.githubusercontent.com/chris-mosley/AmazonBrandFilterList/main/brands.txt https://api.github.com/repos/chris-mosley/AmazonBrandFilterList/releases/latest;"
  },
  "web_accessible_resources": [
    {
      "resources": ["brands.txt"],
      "matches": [
        "https://raw.githubusercontent.com/chris-mosley/AmazonBrandFilterList/main/brands.txt",
        "https://api.github.com/repos/chris-mosley/AmazonBrandFilterList/releases/latest"
      ]
    },
    {
      "resources": ["brands.txt"],
      "matches": ["*://*/*"]
    }
  ]
}
